@if (Show)
{
    <div class="my-modal">
        <div class="my-modal-content">
            <span @onclick="OnCancel" class="close">&times;</span>
            <h3 class="my-modal__heading">@Title</h3>
            <p class="my-modal__body">@Body</p>
            <div class="my-modal__btns">
                <button class="my-modal__cancel" type="button" @onclick="OnCancel">Cancel</button>
                <button class="my-modal__accept" type="button" @onclick="OnAccept">Accept</button>
            </div>
        </div>
    </div>
}